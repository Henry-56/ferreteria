<%- include('partials/_header') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form action="/compras/update/<%= compra.id %>" method="post">
            <div class="form-group my-2">
              <label for="proveedor_id">Proveedor:</label>
              <select name="proveedor_id" class="form-control" required>
                <% if(proveedores && proveedores.length > 0){ %>
                  <% for(let proveedor of proveedores){ %>
                    <option value="<%= proveedor.id %>" <%= compra.proveedor_id == proveedor.id ? 'selected' : '' %>><%= proveedor.nombre %></option>
                  <% } %>
                <% } else { %>
                  <option>Sin proveedores</option>
                <% } %>
              </select>
            </div>
            <div class="form-group my-2">
              <input type="date" name="fecha" value="<%= compra.fecha.toISOString().slice(0,10) %>" class="form-control" required>
            </div>
            <div class="form-group my-2">
              <input type="number" step="0.01" name="total" value="<%= compra.total %>" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-success mt-3">Editar compra</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/_footer') %>
