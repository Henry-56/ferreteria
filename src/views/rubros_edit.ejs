    <%- include('partials/_header') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form action="/rubros/update/<%= rubro.id %>" method="post">
            <div class="form-group my-2">
              <input type="text" name="nombre" value="<%= rubro.nombre %>" class="form-control" required>
            </div>
            <div class="form-group my-2">
              <textarea name="descripcion" class="form-control"><%= rubro.descripcion %></textarea>
            </div>
            <button type="submit" class="btn btn-success mt-3">Editar Rubro</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

