<%- include('partials/_header') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form action="/proveedores/update/<%= proveedor.id %>" method="post">
            <div class="form-group my-2">
              <input type="text" name="nombre" value="<%= proveedor.nombre %>" class="form-control" required>
            </div>
            <div class="form-group my-2">
              <input type="text" name="contacto" value="<%= proveedor.contacto %>" class="form-control">
            </div>
            <div class="form-group my-2">
              <input type="text" name="direccion" value="<%= proveedor.direccion %>" class="form-control">
            </div>
            <div class="form-group my-2">
              <input type="email" name="email" value="<%= proveedor.email %>" class="form-control">
            </div>
            <button type="submit" class="btn btn-success mt-3">Editar Proveedor</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/_footer') %>
